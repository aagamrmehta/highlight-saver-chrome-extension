{
    "manifest_version": 3,
    "name": "Highlight Saver",
    "version": "1.0",
    "description": "Allows users to save highlighted text from a webpage.",
    "permissions": [
      "activeTab",
      "scripting",
      "storage"
    ],
    "action": {
      "default_popup": "popup.html"
    },
    "background": {
      "service_worker": "background.js"
    },
    "icons": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  }